<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide"
    android:orientation="vertical"
    tools:context="net.coding.program.app.login.ResetPasswordBaseActivity">

    <include layout="@layout/login_baselayout_title_mp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/login_baselayout_email_mp" />

        <include layout="@layout/divide_1_12_mp" />
        <include layout="@layout/login_baselayout_password_mp" android:id="@+id/editPassword" />

        <include layout="@layout/divide_1_12_mp" />
        <include layout="@layout/login_baselayout_password_mp" android:id="@+id/editPasswordConfirm" />

    </LinearLayout>

    <include layout="@layout/divide_15_top_mp" />

    <include layout="@layout/login_baselayout_bigbutton_mp" />
</LinearLayout>
